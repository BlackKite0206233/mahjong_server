{
  "name": "mahjong-server",
  "version": "0.0.0",
  "description": "Node server written in TS.",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit --coverage",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build:webpack": "webpack --config webpack.config.js --progress --colors"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/uuid": "^3.4.4",
    "async": "^2.6.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "nodemailer": "^4.7.0",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "socket.io": "^2.1.1",
    "ts-loader": "^5.3.0",
    "uuid": "^3.3.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "1.15.11",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.10",
    "@types/nodemailer": "^4.6.5",
    "@types/request": "2.48.1",
    "@types/socket.io": "^2.1.0",
    "@types/supertest": "^2.0.6",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "shelljs": "^0.8.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
